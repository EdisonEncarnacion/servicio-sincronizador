{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
  "src/index.ts",
  "src/logger/**/*",
  "src/services/**/*",
  "src/sync/**/*",
  "src/controllers/**/*",
  "src/entities/**/*"
]

}